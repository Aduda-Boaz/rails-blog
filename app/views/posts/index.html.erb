< class="card">
    <%= render partial: "shared/user_card", locals: { user: @user } %>
<h1 class="posts_title">User Posts</h1>
<div class="posts">
    <% render partial: "shared/user_card", locals: { user: @post } %>
  <% @posts.each do |post| %>
    <% render partial: "shared/post_card", locals: { post: post } %>
    <%= render partial: "shared/post_comment", locals: { post: post, user: @user } %>
  <% end %>
  <%= button_to "Pagination" %>
</div>
