<div class="card">
  <div class="img">
    <%= image_tag @users.photo, :height => "130px", :width => "130px" %>
  </div>
  <div class="user_card">
    <h1 class="user_name"><%= @user.name %></h1>
    <div class="user_posts">Posts<%= @user.posts_count %></div>
  </div>
</div>

<%= @posts.each do |post| %> 
  <div class="posts">
    <div class="post_title"><%= post.title %></div>
    <div class="post_body"><%= post.text %></div>
    <div class="post_info">
      <div class="comments_count">Comments: <%= post.comments_count %></div>
      <div class="likes_count">Likes: <%= post.likes_count %></div>
    </div>

    <div class="comments">
    <% post.recent_comments.each do |comment|%>
      <% name = @users.where(id: comment.author_id ) %>
      <div class="comment">
        <div class="comment_name"><%= name.first.name %>: </div>
        <div class="comment_text"><%= comment.text %></div>
      </div>
    <% end %>
    </div>
  </div>
<% end %>
