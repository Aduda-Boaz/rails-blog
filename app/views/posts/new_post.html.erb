<div class="form">
  <h1>Add new post</h1>
  <%= render partial: "shared/user_card", locals: { user: @user } %>
  <%= form_with model: @post, url: user_post_path  do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :text %><br>
    <%= f.text_area :text %><br>
    <%= f.submit %>
  <% end %>
</div>
